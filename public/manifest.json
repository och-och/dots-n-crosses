{
	"manifest_version": 1,
	"type": "WebApp",
	"meta": {
		"name": "Dots&Crosses",
		"version": "1.0.0",
		"minimum-overwolf-version": "0.77.10",
		"author": "Och",
		"icon": "logo.png",
		"icon_gray": "logo-grayscale.png",
		"launcher_icon": "icon.ico",
		"window_icon": "logo.png",
		"description": "Demo App"
	},
	"permissions": [
		"Tray"
	],
	"data": {
		"game_targeting": {
			"type": "dedicated",
			"game_ids": [
				216401
			]
		},
		"game_events": [
			216401
		],
		"launch_events": [
			{
				"event": "GameLaunch",
				"event_data": {
					"game_ids": [
						216401
					]
				}
			}
		],
		"start_window": "BackgroundWindow",
		"windows": {
			"BackgroundWindow": {
				"file": "windows/background/index.html",
				"is_background_page": true
			},
			"MainWindow": {
				"file": "windows/main/index.html",
				"transparent": false,
				"resizable": true,
				"use_os_windowing": true,
				"show_maximize": true,
				"size": {
					"width": 900,
					"height": 600
				},
				"min_size": {
					"width": 400,
					"height": 400
				}
			},
			"IngameWindow": {
				"file": "windows/ingame/index.html",
				"transparent": true,
				"resizable": false,
				"size": {
					"width": 300,
					"height": 300
				},
				"min_size": {
					"width": 300,
					"height": 300
				},
				"max_size": {
					"width": 300,
					"height": 300
				},
				"show_in_taskbar": false,
				"clickthrough": true,
				"style": "inputPassThrough",
				"in_game_only": true,
				"bottommost": true
			}
		}
	}
}
